{
    "hostRequirements": {
      "cpus": 4
    },
    "postAttachCommand": {
      "server": "npm install && npm run dev"
    },
    "customizations": {
      "codespaces": {
        "openFiles": [
	  "src/app/page.tsx",
	  "src/app/products/[slug]/page.tsx",
          "src/app/globals.css"
        ]
      }
    },
    "portsAttributes": {
      "5173": {
        "label": "Application",
        "onAutoForward": "openPreview"
      }
    },
    "forwardPorts": [
      3000
    ]
  }
